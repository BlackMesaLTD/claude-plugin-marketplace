{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "^\\s*/(?:workflow:)?(research|plan|implement|review|debug|refactor|archive)\\s+",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/scripts/session-hook.ts start"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "start_session",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/scripts/resolve-project.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/scripts/log-reminder.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/scripts/session-hook.ts check-end"
          }
        ]
      }
    ]
  }
}
